@using User.Models.AuthenViewModel
@model ResetPasswordViewModel
@{
    ViewBag.Title = "Reset Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Overlay Background -->
<div class="bg-overlay"></div>

<!-- Wrapper để canh giữa -->
<div class="position-relative d-flex justify-content-center align-items-center vh-100 z-index-1">
    <div class="card reset-card p-4 shadow" style="width: 100%; max-width: 500px;">
        <div class="text-center mb-4">
            <img src="~/Images/tachnen.png" alt="Logo" class="rounded-circle shadow"
                 style="width: 200px; height: 200px; object-fit: cover;">
        </div>

        <h3 class="text-center mb-4">Đặt lại mật khẩu</h3>

        <form asp-action="ResetPassword" method="post" novalidate>
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Email" />
            <input type="hidden" asp-for="Token" />

            <div class="form-group mb-3">
                <label asp-for="NewPassword" class="form-label">Mật khẩu mới</label>
                <input asp-for="NewPassword" class="form-control" placeholder="Nhập mật khẩu mới" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="ConfirmPassword" class="form-label">Xác nhận mật khẩu</label>
                <input asp-for="ConfirmPassword" class="form-control" placeholder="Xác nhận mật khẩu mới" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary btn-block">Đặt lại mật khẩu</button>
        </form>
    </div>
</div>

    <style>
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
        }
        /* Overlay chung */
        .bg-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: url('/Images/Black-warehouse.png') center/cover no-repeat;
            z-index: 0;
        }

        .z-index-1 {
            position: relative;
            z-index: 1;
        }
        /* Card Reset Password */
        .reset-card {
            border: none;
            border-radius: .75rem;
            overflow: hidden;
            background: #ffffff;
        }

        .form-control {
            border-radius: .5rem;
            padding: .75rem 1rem;
            border: 1px solid #ced4da;
            transition: border-color .2s, box-shadow .2s;
        }

            .form-control:focus {
                border-color: #4e73df;
                box-shadow: 0 0 0 .2rem rgba(78,115,223,.25);
            }

        .btn-primary {
            width: 100%;
            padding: .75rem;
            border-radius: .5rem;
            background-color: #4e73df;
            border: none;
            color: #fff;
            transition: background .2s, transform .2s;
        }

            .btn-primary:hover {
                background-color: #224abe;
                transform: translateY(-2px);
            }

        .form-label {
            font-weight: 500;
            color: #333;
        }
    </style>


@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
