@using User.Services
@inject ImageService imageService

@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* Tối ưu container */
    .profile-container {
        margin-top: 40px;
    }
    /* Card Avatar */
    .card-avatar {
        border-radius: .75rem;
        overflow: hidden;
        box-shadow: 0 .5rem 1rem rgba(0,0,0,0.1);
        text-align: center;
    }

        .card-avatar img {
            width: 100%;
            height: auto;
            object-fit: cover;
        }

        .card-avatar .card-body {
            padding: 1.2rem;
        }

        .card-avatar .user-name {
            margin-top: .75rem;
            font-size: 1.25rem;
            font-weight: 600;
            color: #333;
        }

    /* Card Info */
    .card-info {
        border-radius: .75rem;
        box-shadow: 0 .5rem 1rem rgba(0,0,0,0.1);
    }

        .card-info .card-header {
            background-color: #ffffff;
            border-bottom: 1px solid #e9ecef;
            font-weight: 600;
            font-size: 1.1rem;
            color: #444;
        }

    .info-list .list-group-item {
        border: none;
        padding: .75rem 1.25rem;
    }

        .info-list .list-group-item + .list-group-item {
            border-top: 1px solid #f1f1f1;
        }

    .info-label {
        font-weight: 500;
        color: #555;
        width: 140px;
        display: inline-block;
    }

    .info-value {
        color: #333;
    }

    /* Button edit */
    .btn-edit {
        border-radius: .5rem;
    }
</style>

<div class="container profile-container">
    <div class="row gy-4">
        <!-- Avatar & Name Card -->
        <div class="col-md-4">
            <div class="card card-avatar">
                @if (!string.IsNullOrEmpty(Model?.Hinh))
                {
                    <img src="@await imageService.GetImageUrl(Model.Hinh)" alt="Avatar" height="100px" width="100px" />
                }
                else
                {
                    <img src="~/images/avatar-placeholder.png" alt="No Avatar" />
                }
               @*  <div class="card-body">
                    <div class="user-name">
                        @if (Model != null && !string.IsNullOrEmpty(Model.NameND))
                        {
                            @Model.NameND
                        }
                        else
                        {
                            <span>Chưa có tên</span>
                        }
                    </div>
                </div> *@
            </div>
        </div>

        <!-- Detail Info Card -->
        <div class="col-md-8">
            <div class="card card-info">
                <div class="card-header">
                    Thông tin cá nhân
                </div>
                <ul class="list-group list-group-flush info-list">
                    @if (Model != null)
                    {
                        <li class="list-group-item">
                            <span class="info-label">Email:</span>
                            <span class="info-value">@Model.Email</span>
                        </li>
                        <li class="list-group-item">
                            <span class="info-label">Họ và tên:</span>
                            <span class="info-value">@Model.NameND</span>
                        </li>
                        <li class="list-group-item">
                            <span class="info-label">Số điện thoại:</span>
                            <span class="info-value">@Model.PhoneNumber</span>
                        </li>
                    }
                    else
                    {
                        <li class="list-group-item text-warning">
                            Không thể hiển thị thông tin người dùng.
                        </li>
                    }
                </ul>
                <div class="card-footer text-end bg-white">
                    <a asp-action="EditProfile" class="btn btn-primary btn-edit">
                        <i class="bi bi-pencil-square"></i> Chỉnh sửa
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.js"></script>
}
