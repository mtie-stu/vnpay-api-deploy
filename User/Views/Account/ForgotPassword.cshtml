@using User.Models.AuthenViewModel
@model ForgotPasswordViewModel
@{
    ViewBag.Title = "Forgot Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Overlay Background -->
<div class="bg-overlay"></div>

<!-- Wrapper chính -->
<div class="position-relative d-flex justify-content-center align-items-center vh-100 z-index-1">
    <div class="frame">
        <!-- Left (Logo) -->
        <div class="left-side">
            <img src="~/Images/MOT.png" alt="Logo" class="img-fluid rounded-circle" style="height:150px; object-fit:cover;">
        </div>

        <!-- Right (Forgot Form) -->
        <div class="right-side">
            <div class="forgot-container">
                <h2>Quên Mật Khẩu</h2>
                <form asp-action="ForgotPassword" method="post" novalidate>
                    <div class="form-group mb-3">
                        <label asp-for="Email">Email</label>
                        <input asp-for="Email" class="form-control" placeholder="Nhập email của bạn" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary mb-3">Gửi yêu cầu</button>
                    <div class="text-center">
                        <small>
                            Đã nhớ mật khẩu?
                            <a asp-controller="Account" asp-action="Login">Đăng nhập ngay</a>
                        </small>
                    </div>
                    @if (ViewBag.Message != null)
                    {
                        <div class="alert alert-info text-center mt-3">
                            @ViewBag.Message
                        </div>
                    }
                </form>
            </div>
        </div>
    </div>
</div>

    <style>
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
        }
        /* Overlay chung */
        .bg-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: url('/Images/Black-warehouse.png') center/cover no-repeat;
            z-index: 0;
        }

        .z-index-1 {
            position: relative;
            z-index: 1;
        }
        /* Khung chính */
        .frame {
            display: flex;
            background-color: #fff;
            border-radius: 15px;
            overflow: hidden;
            max-width: 800px;
            width: 100%;
            box-shadow: 0 0 20px rgba(0,0,0,0.2);
        }
        /* Left-side */
        .left-side {
            flex: 1;
            background-color: #32ADE6;
            color: #fff;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 30px;
        }
        /* Right-side */
        .right-side {
            flex: 1;
            background-color: #fff;
            padding: 40px 30px;
        }
        /* Tiêu đề và container form */
        .forgot-container h2 {
            font-weight: 600;
            color: #224abe;
            margin-bottom: 20px;
        }
        /* Form style */
        .form-group label {
            font-weight: 500;
        }

        .form-control {
            border-radius: .5rem;
            padding: .75rem 1rem;
            border: 1px solid #ced4da;
            transition: border-color .2s, box-shadow .2s;
        }

            .form-control:focus {
                border-color: #32ADE6;
                box-shadow: 0 0 0 .2rem rgba(50,173,230,.25);
            }
        /* Button */
        .btn-primary {
            width: 100%;
            padding: .75rem;
            background-color: #32ADE6;
            border: none;
            border-radius: .5rem;
            transition: background .2s;
        }

            .btn-primary:hover {
                background-color: #1f8fbf;
            }
        /* Link nhỏ */
        .text-center small a {
            color: #32ADE6;
            text-decoration: none;
            font-weight: 500;
        }

            .text-center small a:hover {
                text-decoration: underline;
            }
    </style>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
