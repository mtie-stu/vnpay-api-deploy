@using User.Models.AuthenViewModel
@model EditProfileViewModel
@using User.Services
@inject ImageService imageService

    <style>
        /* Card chung */
        .edit-card {
            border: none;
            border-radius: .75rem;
            overflow: hidden;
            box-shadow: 0 .5rem 1.5rem rgba(0, 0, 0, 0.1);
        }

            /* Header gradient */
            .edit-card .card-header {
                background: linear-gradient(135deg, #4e73df, #224abe);
                color: #fff;
                padding: 1.5rem;
                text-align: center;
            }

        /* Avatar */
        .avatar-preview {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            object-fit: cover;
            border: 4px solid #4e73df;
            transition: transform .3s, box-shadow .3s;
        }

            .avatar-preview:hover {
                transform: scale(1.05);
                box-shadow: 0 0 15px rgba(78, 115, 223, .5);
            }

        /* Label */
        .form-label {
            font-weight: 500;
            color: #224abe;
        }

        /* Input */
        .form-control {
            border-radius: .5rem;
            padding: .75rem 1rem;
            border: 1px solid #ced4da;
            transition: border-color .2s, box-shadow .2s;
        }

            .form-control:focus {
                border-color: #4e73df;
                box-shadow: 0 0 0 .2rem rgba(78, 115, 223, .25);
            }

        /* Button */
        .btn-save {
            background: linear-gradient(135deg, #1cc88a, #17a673);
            border: none;
            border-radius: .5rem;
            padding: .75rem 1.5rem;
            font-size: 1rem;
            color: #fff;
            box-shadow: 0 .3rem .6rem rgba(28, 200, 138, .3);
            transition: transform .2s, box-shadow .2s;
        }

            .btn-save:hover {
                transform: translateY(-2px);
                box-shadow: 0 .5rem 1rem rgba(28, 200, 138, .5);
            }
    </style>


<div class="container edit-container py-5">
    <div class="card edit-card mx-auto" style="max-width: 600px;">
        <div class="card-header">
            <h4>Cập nhật thông tin cá nhân</h4>
        </div>
        <div class="card-body">
            <form asp-action="EditProfile" method="post" enctype="multipart/form-data" novalidate>
                <!-- Avatar -->
                <div class="mb-4 text-center">
                    <img id="imgPreview"
                         src="@await imageService.GetImageUrl(@User.FindFirst("Hinh")?.Value)"
                         alt="Avatar Preview"
                         class="avatar-preview mb-2" />
                    <div>
                        <label for="AvatarFile" class="form-label">Ảnh đại diện</label>
                        <input asp-for="ImageFile"
                               type="file"
                               class="form-control"
                               accept="image/*"
                               onchange="previewImage(this)" />
                        <span asp-validation-for="ImageFile" class="text-danger"></span>
                    </div>
                </div>

                <!-- Họ tên -->
                <div class="mb-4">
                    <label asp-for="NameND" class="form-label">Họ tên</label>
                    <input asp-for="NameND" class="form-control" />
                    <span asp-validation-for="NameND" class="text-danger"></span>
                </div>

                <!-- Email -->
                <div class="mb-4">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <!-- SĐT -->
                <div class="mb-4">
                    <label asp-for="PhoneNumber" class="form-label">Số điện thoại</label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

                <!-- Submit -->
                <div class="text-center">
                    <button type="submit" class="btn btn-save">Lưu thay đổi</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function previewImage(input) {
            var file = input.files[0];
            if (!file) return;
            var reader = new FileReader();
            reader.onload = function (e) {
                document.getElementById('imgPreview').src = e.target.result;
            };
            reader.readAsDataURL(file);
        }
    </script>
}
