@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Admin Panel - @ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        body {
            height: 100vh;
            display: flex;
        }

        .sidebar {
            width: 250px;
            background: #32ADE6;
            color: white;
            padding: 15px;
            height: 100vh;
            position: fixed;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

            .sidebar a {
                color: white;
                text-decoration: none;
                display: block;
                padding: 10px;
                margin-bottom: 5px;
                border-radius: 5px;
            }

                .sidebar a:hover {
                    background: #1e5f7d;
                    color: white;
                }

                .sidebar #img:hover {
                background: #32ADE6;
                    color: white;
                }

        .content {
            margin-left: 250px;
            flex-grow: 1;
            padding: 20px;
            width: calc(100% - 250px);
        }

        .user-info {
            display: flex;
            align-items: center;
            padding: 10px;
        }

            .user-info img {
                width: 40px;
                height: 40px;
                border-radius: 50%;
                margin-left: 10px;
            }

        .user-info {
            display: flex;
            align-items: center;
            gap: 10px;
            padding: 10px;
            background: white;
            border-radius: 10px;
            color: black;
        }

            .user-info img {
                width: 40px;
                height: 40px;
                border-radius: 50%;
            }

        .user-text {
            display: flex;
            flex-direction: column;
            font-size: 14px;
        }

            .user-text p {
                margin: 0;
                font-size: 12px;
                color: gray;
            }

        .logout-icon {
            margin-left: auto;
            font-size: 18px;
            color: gray;
            text-decoration: none;
        }

    </style>
</head>
<body>
    <nav class="sidebar">
        <div>
            <a id="img" class="navbar-brand" asp-area="" asp-controller="Admin" asp-action="Index">
                <img src="~/Images/MỌT-Photoroom.png" alt="Logo" class="img-fluid">
            </a>
            <a href="#">Dashboard</a>
            <a href="#">Order Management</a>
            <a href="#">Customers</a>
            <a href="#">Reports</a>
            <a href="#">Settings</a>
        </div>
        <div class="user-info">
            <img src="~/Images/user-profile.png" alt="User Profile">
            <div class="user-text">
                <strong>qqqqqqq @User.Identity.Name</strong>
                <p class="email">baoahsad@âhd...</p>
            </div>
            <a id="Logout" href="@Url.Action("Logout", "Account")" class="logout-icon">
                &#x2192; 
            </a>
        </div>

    </nav>

    <div class="content">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
