@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Admin Panel - @ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        html, body {
            height: 100%;
            margin: 0;
        }

        body {
            display: flex;
        }

        .sidebar {
            width: 250px;
            background: #32ADE6;
            color: white;
            padding: 15px;
            height: 100vh;
            position: fixed;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

            .sidebar a {
                color: white;
                text-decoration: none;
                display: block;
                padding: 10px;
                margin-bottom: 5px;
                border-radius: 5px;
            }

                .sidebar a:hover {
                    background: #1e5f7d;
                    color: white;
                }

            .sidebar #img:hover {
                background: #32ADE6;
                color: white;
            }

        .main-wrapper {
            margin-left: 250px;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            width: calc(100% - 250px);
        }

        .content {
            flex: 1;
            padding: 20px;
        }

        .user-info {
            display: flex;
            align-items: center;
            gap: 10px;
            padding: 10px;
            background: white;
            border-radius: 10px;
            color: black;
        }

            .user-info img {
                width: 40px;
                height: 40px;
                border-radius: 50%;
            }

        .user-text {
            display: flex;
            flex-direction: column;
            font-size: 14px;
        }

            .user-text p {
                margin: 0;
                font-size: 12px;
                color: gray;
            }

        .logout-icon {
            margin-left: auto;
            font-size: 18px;
            color: gray;
            text-decoration: none;
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <nav class="sidebar">
        <div>
            <a id="img" class="navbar-brand" asp-area="" asp-controller="Admin" asp-action="Index">
                <img src="~/Images/MỌT-Photoroom.png" alt="Logo" class="img-fluid">
            </a>
            <a href="#">Dashboard</a>
            <a href="#">Order Management</a>
            <a href="#">Customers</a>
            <a href="#">Reports</a>
            <a href="#">Settings</a>
        </div>
        <div class="user-info">
            <img src="~/Images/user-profile.png" alt="User Profile">
            <div class="user-text">
                <strong>qqqqqqq @User.Identity.Name</strong>
                <p class="email">baoahsad@âhd...</p>
            </div>
            <a id="Logout" href="@Url.Action("Logout", "Account")" class="logout-icon">
                &#x2192;
            </a>
        </div>
    </nav>

    <!-- Main Content Wrapper -->
    <div class="main-wrapper">
        <div class="content">
            <main role="main">
                @RenderBody()
            </main>
        </div>

        <!-- Footer -->
        <footer class="bg-dark text-white py-5">
            <div class="container">
                <div class="row">
                    <!-- About -->
                    <div class="col-md-4">
                        <h5>Về Chúng Tôi</h5>
                        <p>Cung cấp giải pháp dịch vụ chuyên nghiệp, uy tín và tận tâm đến từng khách hàng. Đội ngũ của chúng tôi luôn sẵn sàng hỗ trợ bạn 24/7.</p>
                    </div>

                    <!-- Quick Links -->
                    <div class="col-md-2">
                        <h5>Liên kết nhanh</h5>
                        <ul class="list-unstyled">
                            <li><a href="#" class="text-white text-decoration-none">Trang chủ</a></li>
                            <li><a href="#" class="text-white text-decoration-none">Dịch vụ</a></li>
                            <li><a href="#" class="text-white text-decoration-none">Báo giá</a></li>
                            <li><a href="#" class="text-white text-decoration-none">Hỗ trợ</a></li>
                        </ul>
                    </div>

                    <!-- Contact -->
                    <div class="col-md-3">
                        <h5>Liên hệ</h5>
                        <p>Email: contact@motservice.vn</p>
                        <p>Hotline: 0987 654 321</p>
                        <p>Địa chỉ: 123 Nguyễn Văn Cừ, Q.5, TP.HCM</p>
                    </div>

                    <!-- Social Media -->
                    <div class="col-md-3">
                        <h5>Kết nối với chúng tôi</h5>
                        <a href="#" class="text-white me-3"><i class="bi bi-facebook"></i> Facebook</a><br>
                        <a href="#" class="text-white me-3"><i class="bi bi-instagram"></i> Instagram</a><br>
                        <a href="#" class="text-white"><i class="bi bi-youtube"></i> YouTube</a>
                    </div>
                </div>

                <hr class="border-secondary mt-4">

                <div class="text-center">
                    <p class="mb-0">&copy; 2025 MỌT Service. All rights reserved.</p>
                </div>
            </div>
        </footer>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

@RenderSection("Scripts", required: false)

</html>
