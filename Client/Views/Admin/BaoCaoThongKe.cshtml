<!DOCTYPE html>
<html lang="vi">
<head>
    @{
        Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    }

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Báo cáo & Thống kê</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .chart-placeholder {
            height: 400px;
            background: linear-gradient(to top, #7fbcff, #e0e9ff);
            border-radius: 10px;
        }
    </style>
</head>
<body class="bg-light">

    <div class="container py-4">
        <h5 class="text-primary fw-bold">Báo cáo & thống kê</h5>

        <div class="d-flex gap-2 mb-4">
            <div class="dropdown">
                <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                    SỐ LƯỢNG HÀNG
                </button>
                <ul class="dropdown-menu">
                    <li><a class="dropdown-item" href="#">SỐ LƯỢNG HÀNG</a></li>
                    <li><a class="dropdown-item" href="#">SỐ KHÔNG GIAN CÒN</a></li>
                    <li><a class="dropdown-item" href="#">THỐNG KÊ DOANH THU</a></li>
                </ul>
            </div>

            <div class="dropdown">
                <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                    This week
                </button>
                <ul class="dropdown-menu">
                    <li><a class="dropdown-item" href="#">This week</a></li>
                    <li><a class="dropdown-item" href="#">Last week</a></li>
                    <li><a class="dropdown-item" href="#">This month</a></li>
                </ul>
            </div>
        </div>

        <!-- Placeholder biểu đồ -->
  
            <div class="chart-container" style="position: relative; height:50vh; width:100%">
                <canvas id="revenueChart" class="mt-3"></canvas>
            </div>
       
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        var ctx = document.getElementById('revenueChart').getContext('2d');
        var chart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: ['T12', 'T1', 'T2', 'T3', 'T4', 'T5'],
                datasets: [{
                    label: 'Revenue',
                    data: [200000, 180000, 250000, 270000, 190000, 50000],
                    backgroundColor: 'rgba(50, 173, 230, 0.6)',
                    borderColor: 'rgba(50, 173, 230, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    </script>
</body>
</html>
