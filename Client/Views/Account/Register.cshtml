@model Client.Models.ApiErrorResponse
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}



<!-- FontAwesome + Bootstrap -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

<!-- Custom CSS -->
<style>
    html, body {
        height: 100%;
        margin: 0;
        padding: 0;
    }

    .bg-overlay {
        position: fixed;
        top: 0;
        left: 0;
        height: 100%;
        width: 100%;
        background: url('/Images/Black-warehouse.png') center center / cover no-repeat;
        z-index: 0;
    }

    .z-index-1 {
        position: relative;
        z-index: 1;
    }

    .register-container {
        background-color: white;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.15);
        max-width: 400px;
        width: 100%;
    }

    .logo-section {
        text-align: center;
        margin-bottom: 20px;
    }

    .logo-section img {
        height: 50px;
        object-fit: cover;
    }

    .vh-100 {
        height: 100vh;
    }

    .no-account {
        margin-top: 15px;
    }

    .forgot-password {
        text-align: right;
        margin-bottom: 10px;
    }

    .frame {
        width: 850px;
        height: 700px;
        background-color: #3498db;
        color: white;
        border: 2px solid #217dbb;
        display: flex;
        justify-content: center;
        align-items: center;
        font-size: 18px;
        font-weight: bold;
        border-radius: 10px;
        box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.2);
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        padding: 20px;
        margin-top: 40px;
    }

    /* Khu vực logo + social login */
    .logo-section {
        flex: 1;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

        .logo-section img {
            width: 100px;
            height: auto;
            margin-bottom: 15px;
        }

    /* Nút đăng ký Google & Facebook */
    .social-login {
        display: flex;
        gap: 15px;
        margin-top: 10px;
    }

    .btn-social {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        display: flex;
        justify-content: center;
        align-items: center;
        font-size: 22px;
        border: none;
        cursor: pointer;
        color: white;
    }

    .btn-google {
        background-color: #db4437;
    }

    .btn-facebook {
        background-color: #1877f2;
    }

    .btn-google:hover {
        background-color: #c1351d;
    }

    .btn-facebook:hover {
        background-color: #145db8;
    }

    /* Khu vực form đăng ký */
    .register-container {
        width: 420px;
        background: white;
        color: black;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);
    }

        .register-container h2 {
            text-align: center;
        }

    .form-group {
        margin-bottom: 10px;
    }

    .form-control {
        width: 100%;
        padding: 6px;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    .btn-primary {
        width: 100%;
        padding: 8px;
        background-color: #003366;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

        .btn-primary:hover {
            background-color: #1a5e8c;
        }
</style>

<!-- Background overlay -->
<div class="bg-overlay"></div>

<!-- Login Container -->
<div class="position-relative d-flex justify-content-center align-items-center vh-100 z-index-1">
    <div class="container">
        <div class="frame">
            <!-- Khu vực logo + Đăng ký bằng Google, Facebook -->
            <div class="logo-section">
                <img src="~/Images/MOT.png" alt="Logo" class="img-fluid rounded-circle" style="width: auto; height: 200px; object-fit: cover;">
                @*     <div class="social-login">
                <button class="btn-social btn-google">
                <i class="fab fa-google"></i>
                </button>
                <button class="btn-social btn-facebook">
                <i class="fab fa-facebook-f"></i>
                </button>
                </div> *@
            </div>
            @if (ViewBag.Errors != null)
            {
                foreach (var err in ViewBag.Errors)
                {
                    <div class="alert alert-danger">@err.Description</div>
                }
            }

            <!-- Khu vực form đăng ký -->
            <div class="register-container">
                <h2>Register</h2>
                <form action="@Url.Action("Register", "Account")" method="post">
                    <div class="form-group">
                        <label>User Name</label>
                        <input type="text" class="form-control" name="nameND" placeholder="Enter username" required>
                    </div>

                    <div class="form-group">
                        <label>Email</label>
                        <input type="email" class="form-control" name="Email" placeholder="Enter email" required>
                    </div>
                    <div class="form-group">
                        <label>Sdt</label>
                        <input type="number" class="form-control" name="SĐT" placeholder="Enter SDT" required>
                    </div>
                    @*  <div class="form-group">
                    <label>Địa chỉ</label>
                    <input type="text" class="form-control" name="DiaChi" placeholder="Enter địa chỉ" required>
                    </div> *@
                    <div class="form-group">
                        <label>Password</label>
                        <input type="password" class="form-control" name="Password" placeholder="Enter password" required>
                    </div>

                    <div class="form-group">
                        <label>Confirm Password</label>
                        <input type="password" class="form-control" name="ConfirmPassword" placeholder="Confirm password" required>
                    </div>

                    <div class="form-group">
                        <h5>
                            Bằng cách ấn đăng ký bạn đã đồng ý với <a href="@Url.Action("Terms", "Policy")">Điều khoản và dịch vụ</a> của chúng tôi.
                        </h5>
                    </div>

                    <button type="submit" class="btn btn-primary">Register</button>
                    <div class="text-center no-account">
                        <p style="font-size: 13px;">
                            Đã có tài khoản
                            <a style="color: #5dade2; font-size: 13px;" asp-controller="Account" asp-action="Login">Đăng nhập ngay</a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



